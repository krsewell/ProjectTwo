{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "-Wall", "-std=c++11", "*.cpp", "-o", "${workspaceRoot}/bin/output"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "Build Objects",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "-Wall", "-std=c++11","-c", "*.cpp" 
            ],
            "group": "build"
        }
    ]
}